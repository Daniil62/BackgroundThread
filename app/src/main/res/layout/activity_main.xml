<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/general_start_button"
        android:layout_width="wrap_content"
        android:layout_height="145dp"
        android:layout_marginStart="8dp"
        android:onClick="generalStart"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout2"
        app:layout_constraintStart_toEndOf="@+id/linearLayout2"
        app:layout_constraintTop_toTopOf="@+id/linearLayout2"
        app:srcCompat="@android:drawable/ic_media_play"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:paddingBottom="15dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/thread_count_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/thread"
            android:textSize="12dp"
            android:textStyle="italic|bold"
            tools:ignore="SpUsage" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/stop_thread_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:onClick="stopThread"
                app:srcCompat="@android:drawable/ic_media_pause"
                tools:ignore="ContentDescription"
                tools:layout_editor_absoluteX="140dp"
                tools:layout_editor_absoluteY="339dp" />

            <ImageButton
                android:id="@+id/start_thread_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:onClick="startThread"
                app:srcCompat="@android:drawable/ic_media_play"
                tools:ignore="ContentDescription"
                tools:layout_editor_absoluteX="220dp"
                tools:layout_editor_absoluteY="339dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/runnable_count_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/runnable"
            android:textSize="12dp"
            android:textStyle="italic|bold"
            tools:ignore="SpUsage" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/stop_runnable_thread_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:onClick="stopRunnable"
                app:srcCompat="@android:drawable/ic_media_pause"
                tools:ignore="ContentDescription"
                tools:layout_editor_absoluteX="140dp"
                tools:layout_editor_absoluteY="339dp" />

            <ImageButton
                android:id="@+id/start_runnable_thread_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:onClick="startRunnable"
                app:srcCompat="@android:drawable/ic_media_play"
                tools:ignore="ContentDescription"
                tools:layout_editor_absoluteX="220dp"
                tools:layout_editor_absoluteY="339dp" />
        </LinearLayout>
    </LinearLayout>

    <ImageButton
        android:id="@+id/general_stop_button"
        android:layout_width="wrap_content"
        android:layout_height="145dp"
        android:layout_marginEnd="8dp"
        android:onClick="generalStop"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout2"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout2"
        app:layout_constraintTop_toTopOf="@+id/linearLayout2"
        app:srcCompat="@android:drawable/ic_media_pause"
        tools:ignore="ContentDescription" />

</android.support.constraint.ConstraintLayout>